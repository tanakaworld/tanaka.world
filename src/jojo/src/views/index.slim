  body
    .container
      ng-view Loading..........

    script type="text/ng-template" id="index.html"
      div st-table="characters"
        input.form-control-custom placeholder="keyword" st-search="" type="search"
        table.table
          .row
            .col-xs-12.col-sm-2.col-md-2
              select st-search="part"
                option value="" ALL
                option ng-repeat="p in partsSelector" value="{{p}}" Part-{{p}}
            .col-xs-12.col-sm-10.col-md-10
              div st-displayed-pages="7" st-items-by-page="itemsByPage" st-pagination=""
          tbody
            tr.character-row ng-repeat="char in characters" ng-click="openDetail(char)"
              td
                img src="https://placeholdit.imgix.net/~text?txtsize=33&txt=J&w=200&h=200" width="50" height="50"
              td ng-bind="::char.body"
              td ng-bind="::char.stand"
              td ng-bind="::char.part"

    script type="text/ng-template" id="characterDetail.html"
      .page-header
        a href="src/jojo/dist" < HOME

      .media
        .media-left
          img src="https://placeholdit.imgix.net/~text?txtsize=33&txt=J&w=200&h=200"
        .media-body
          h4.media-heading ng-bind="::char.body"
          p ng-bind="::char.stand"
          p ng-bind="::char.part"


